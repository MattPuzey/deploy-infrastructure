{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates a static site hosted in S3 for a bare domain and a www sub-domain.",
  "Parameters": {
    "RootDomain": {
      "Type": "String",
      "Description": "the bare dns name of an existing Amazon Route 53 hosted zone"
    },
    "AcmCertificateArn": {
      "Type": "String",
      "Description": "the ARN of an AWS Certificate Manager certificate",
      "AllowedPattern": "arn:aws:acm:.*"
    },
    "IndexDocument": {
      "Type": "String",
      "Default": "index.html"
    },
    "ErrorDocument": {
      "Type": "String",
      "Default": "error.html"
    }
  },
  "Mappings": {
    "RegionMap": {
      "eu-west-2": {
        "WebsiteEndpoint": "s3-website.eu-west-2.amazonaws.com"
      }
    }
  },
  "Resources": {
    "RootBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "PublicRead",
        "BucketName": {
          "Ref": "RootDomain"
        },
        "WebsiteConfiguration": {
          "ErrorDocument": {
            "Ref": "ErrorDocument"
          },
          "IndexDocument": {
            "Ref": "IndexDocument"
          }
        }
      },
      "DeletionPolicy": "Retain"
    },
    "RootBucketPolicy" : {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "RootBucket"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Sid": "PublicReadForGetBucketObjects",
              "Action": "s3:GetObject",
              "Effect": "Allow",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "RootBucket"
                    },
                    "/*"
                  ]
                ]
              },
              "Principal": "*"
            }
          ]
        }
      }
    },
    "RootDistribution": {
      "Type" : "AWS::CloudFront::Distribution",
      "DependsOn": [ "RootBucket" ],
      "Properties" : {
        "DistributionConfig" : {
          "Comment" : "Cloud distribution pointing to S3 bucket containing site contents",
          "Origins" : [
            {
              "DomainName": {
                "Fn::Join": [
                  ".",
                  [
                    {
                      "Ref": "RootDomain"
                    },
                    {
                      "Fn::FindInMap": [
                        "RegionMap",
                        {
                          "Ref": "AWS::Region"
                        },
                        "WebsiteEndpoint"
                      ]
                    }
                  ]
                ]
              },
              "Id": "S3Origin",
              "CustomOriginConfig": {
                "HTTPPort": "80",
                "HTTPSPort": "443",
                "OriginProtocolPolicy": "http-only"
              }
            }
          ],
          "Enabled" : true,
          "DefaultRootObject" : { "Ref": "IndexDocument" },
          "Aliases" : [ { "Ref" : "RootDomain" } ],
          "DefaultCacheBehavior" : {
            "AllowedMethods": ["GET", "HEAD"],
            "Compress": true,
            "TargetOriginId": "S3Origin",
            "ForwardedValues": {
              "QueryString": true,
              "Cookies": {
                "Forward": "none"
              }
            },
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "PriceClass" : "PriceClass_100",
          "ViewerCertificate" : {
            "AcmCertificateArn": { "Ref": "AcmCertificateArn" },
            "SslSupportMethod": "sni-only"
          }
        }
      }
    },
    "WWWBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "PublicRead",
        "BucketName": {
          "Fn::Join": [
            ".",
            [
              "www",
              {
                "Ref": "RootDomain"
              }
            ]
          ]
        },
        "WebsiteConfiguration" : {
          "RedirectAllRequestsTo": {
            "HostName": {
              "Ref": "RootBucket"
            }
          }
        }
      }
    },
    "WWWBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": { "Fn::Join": [ "", [ "www.", { "Ref": "RootDomain" } ] ] },
        "PolicyDocument": {
          "Statement": [
            {
              "Sid": "PublicReadForGetForwardingBucketObjects",
              "Effect": "Allow",
              "Principal": "*",
              "Action": "s3:GetObject",
              "Resource": { "Fn::Join": [ "", [ "arn:aws:s3:::", { "Ref": "WWWBucket" }, "/*" ] ] }
            }
          ]
        }
      }
    },
    "WWWDistribution": {
      "Type" : "AWS::CloudFront::Distribution",
      "DependsOn": [ "WWWBucket" ],
      "Properties" : {
        "DistributionConfig" : {
          "Comment" : "Cloud distribution pointing to S3 bucket redirecting to root bucket",
          "Origins" : [
            {
              "DomainName": {
                "Fn::Join": [
                  ".",
                  [
                    { "Fn::Join": [ "", [ "www.", { "Ref": "RootDomain" } ] ] },
                    {
                      "Fn::FindInMap": [
                        "RegionMap",
                        {
                          "Ref": "AWS::Region"
                        },
                        "WebsiteEndpoint"
                      ]
                    }
                  ]
                ]
              },
              "Id": "S3WWWOrigin",
              "CustomOriginConfig": {
                "HTTPPort": "80",
                "HTTPSPort": "443",
                "OriginProtocolPolicy": "http-only"
              }
            }
          ],
          "Enabled" : true,
          "DefaultRootObject" : { "Ref": "IndexDocument" },
          "Aliases" : [ { "Fn::Join": [ "", [ "www.", { "Ref": "RootDomain" } ] ] } ],
          "DefaultCacheBehavior" : {
            "AllowedMethods": ["GET", "HEAD"],
            "Compress": true,
            "TargetOriginId": "S3WWWOrigin",
            "ForwardedValues": {
              "QueryString": true,
              "Cookies": {
                "Forward": "none"
              }
            },
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "PriceClass" : "PriceClass_100",
          "ViewerCertificate" : {
            "AcmCertificateArn": { "Ref": "AcmCertificateArn" },
            "SslSupportMethod": "sni-only"
          }
        }
      }
    },
    "DNSEntries": {
      "Type": "AWS::Route53::RecordSetGroup",
      "Properties": {
        "HostedZoneName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "RootDomain"
              },
              "."
            ]
          ]
        },
        "RecordSets": [
          {
            "Name": {
              "Ref": "RootDomain"
            },
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z2FDTNDATAQYW2",
              "DNSName": {
                "Fn::GetAtt": [
                  "RootDistribution",
                  "DomainName"
                ]
              }
            }
          },
          {
            "Name": {
              "Fn::Join": [
                "",
                [
                  "www.",
                  {
                    "Ref": "RootDomain"
                  }
                ]
              ]
            },
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z2FDTNDATAQYW2",
              "DNSName": {
                "Fn::GetAtt": [
                  "WWWDistribution",
                  "DomainName"
                ]
              }
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "RootDistributionEndpoint": {
      "Value": { "Fn::GetAtt": [ "RootDistribution", "DomainName" ] }
    },
    "WWWDistributionEndpoint": {
      "Value": { "Fn::GetAtt": [ "WWWDistribution", "DomainName" ] }
    }
  }
}