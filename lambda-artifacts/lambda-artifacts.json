{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "LambdaArtifacts": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": { "Fn::Sub": [ "lambda-artifacts-${AccountId}", { "AccountId": {"Ref" : "AWS::AccountId" }} ]}
      },
      "DeletionPolicy": "Retain"
    },
  },
  "Outputs": {
    "LambdaArtifactsBucketArn" : {
      "Description" : "The arn of the s3 bucket for lambda artifacts",
      "Value" : {"Fn::GetAtt": ["LambdaArtifacts", "Arn"]},
      "Export" : {
        "Name" : "LambdaArtifactsBucketArn"
      }
    }
  }
}
