{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "LambdaArtifacts": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": { "Fn::Sub": [ "lambda-artifacts-${AccountId}", { "AccountId": {"Ref" : "AWS::AccountId" }} ]}
      },
      "DeletionPolicy": "Retain"
    },
  },
  "Outputs": {
    "LambdaArtifactsBucketName" : {
      "Description" : "The name of the s3 bucket for lambda artifacts",
      "Value" : {"Ref": "LambdaArtifacts"},
      "Export" : {
        "Name" : "LambdaArtifactsBucketName"
      }
    }
  }
}
