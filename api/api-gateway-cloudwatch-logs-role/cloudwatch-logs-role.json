{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "ApiGatewayCloudWatchLogsRole":{
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": ["sts:AssumeRole"],
              "Effect": "Allow",
              "Principal": {"Service": ["apigateway.amazonaws.com"]}
            }
          ]
        },
        "RoleName": "ApiGatewayCloudWatchLogsRole"
      }
    },
    "ApiLambdaPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "ApiGatewayLogsPolicy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:DescribeLogGroups",
                "logs:DescribeLogStreams",
                "logs:PutLogEvents",
                "logs:GetLogEvents",
                "logs:FilterLogEvents"
              ],
              "Resource": [ "*" ],
              "Effect": "Allow"
            }
          ],
        },
        "Roles": [{"Ref": "ApiGatewayCloudWatchLogsRole"}]
      }
    }
  },
  "Outputs": {
    "ApiGatewayCloudWatchLogsRoleArn": {
      "Description" : "The arn of the API Gateway CloudWatch logs role",
      "Value": {"Fn::GetAtt": ["ApiGatewayCloudWatchLogsRole", "Arn"]},
      "Export": {
        "Name": "ApiGatewayCloudWatchLogsRoleArn"
      }
    }
  }
}
