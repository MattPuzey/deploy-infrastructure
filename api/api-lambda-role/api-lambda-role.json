{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "ApiLambdaRole":{
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": ["sts:AssumeRole"],
              "Effect": "Allow",
              "Principal": {"Service": ["lambda.amazonaws.com"]}
            }
          ]
        },
        "RoleName": "ApiLambdaRole"
      }
    },
    "ApiLambdaPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "ApiLambdaPolicy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": [ "*" ],
              "Effect": "Allow"
            },
            {
              "Action": [
                "lambda:InvokeFunction"
              ],
              "Resource": [ "*" ],
              "Effect": "Allow"
            },
            {
              "Action": [
                "dynamodb:PutItem"
              ],
              "Resource": [ "*" ],
              "Effect": "Allow"
            }
          ],
        },
        "Roles": [{"Ref": "ApiLambdaRole"}]
      }
    }
  },
  "Outputs": {
    "ApiLambdaRoleArn" : {
      "Description" : "The arn of the role for api lambda",
      "Value" : {"Fn::GetAtt": ["ApiLambdaRole", "Arn"]},
      "Export" : {
        "Name": "ApiLambdaRoleArn"
      }
    }
  }
}
